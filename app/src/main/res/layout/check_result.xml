<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="25dp"
        android:text="체크리스트 결과"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:text="Checked: 0 items"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/check2_result1"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="2개 이하"
        app:layout_constraintBaseline_toBaselineOf="@+id/check2_result1"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check2_result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:text="건강합니다."
        app:layout_constraintStart_toEndOf="@+id/check2"
        app:layout_constraintTop_toBottomOf="@+id/result_text_view"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/check2_result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="그래도 운동은 꾸준히 하셔야 합니다."
        app:layout_constraintStart_toStartOf="@+id/check2_result1"
        app:layout_constraintTop_toBottomOf="@+id/check2_result1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check5_result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="32dp"
        android:text="운동부족 상태입니다."
        app:layout_constraintBottom_toTopOf="@+id/check5_result2"
        app:layout_constraintStart_toStartOf="@+id/check2_result2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="3~5개"
        app:layout_constraintBaseline_toBaselineOf="@+id/check5_result1"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check5_result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="38dp"
        android:text="아직 문제는 없어도 운동습관을 들여야 합니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check2_result2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check10_result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="55dp"
        android:text="건강이 위험합니다!"
        app:layout_constraintStart_toEndOf="@+id/check10"
        app:layout_constraintTop_toBottomOf="@+id/check9_result2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check9_result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="당장 운동을 시작하세요"
        app:layout_constraintStart_toStartOf="@+id/check9_result1"
        app:layout_constraintTop_toBottomOf="@+id/check9_result1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="6~9개"
        app:layout_constraintBaseline_toBaselineOf="@+id/check9_result1"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="10개"
        app:layout_constraintBaseline_toBaselineOf="@+id/check10_result1"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check10_result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="운동도 운동이지만 병원을 찾아가세요."
        app:layout_constraintStart_toStartOf="@+id/check10_result1"
        app:layout_constraintTop_toBottomOf="@+id/check10_result1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/check9_result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:text="심각한 운동부족입니다."
        app:layout_constraintStart_toEndOf="@+id/check9"
        app:layout_constraintTop_toBottomOf="@+id/check5_result2"
        tools:ignore="MissingConstraints" />

    <android.widget.Button
        android:id="@+id/button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="홈으로"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check10_result2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

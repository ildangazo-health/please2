<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputCheckup3Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요검사"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요단백"
                    android:layout_gravity="center_vertical" />

                <RadioGroup
                    android:id="@+id/radioGroup_yoprotein"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp">

                    <RadioButton
                        android:id="@+id/radio_yo_nomal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정상" />

                    <RadioButton
                        android:id="@+id/radio_yo_boundary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경계" />

                    <RadioButton
                        android:id="@+id/radio_yo_suspicion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="단백뇨의심" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영상검사"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="흉부촬영"
                    android:layout_gravity="center_vertical" />

                <RadioGroup
                    android:id="@+id/radioGroup_chest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <RadioButton
                        android:id="@+id/radio_chest_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정상" />

                    <RadioButton
                        android:id="@+id/radio_chest_tuberculosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비활동성 폐결핵" />

                    <RadioButton
                        android:id="@+id/radio_chest_suspicion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="질환의심" />

                    <RadioButton
                        android:id="@+id/radio_chest_etc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기타"
                        android:layout_marginTop="8dp" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/input_chest_etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="기타 내용을 입력하세요"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진찰(문진)"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과거병력"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/input_medicalHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약물치료"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/input_medicine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생활습관"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/checkBox_smoking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금연필요"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/checkBox_drinking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="절주필요"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/checkBox_physicalActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신체활동 필요"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/checkBox_muscularExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="근력운동 필요"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/buttonPrevious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이전으로"
                    android:layout_gravity="start" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저장하기"
                    android:layout_gravity="end" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
